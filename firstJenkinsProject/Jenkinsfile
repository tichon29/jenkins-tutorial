pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'echo "Checking files"'
                sh '''
                    ls -la
                    fitList=$(grep -rnw 'firstJenkinsProject/test' -e 'fit(')
                    fdescribeList=$(grep -rnw 'firstJenkinsProject/test' -e 'fdescribe(')
                    if [ -z "$fitList" ] && [ -z "$fdescribeList" ]
                    then
                        echo "We are clean."
                    else
                        echo "Should fail"
                        currentBuild.result = 'FAILURE'
                    fi
                    echo "end"
                '''
            }
        }
        stage('2nd Step') {
            steps {
                sh 'echo "Hello World"'
            }
        }
    }
}
